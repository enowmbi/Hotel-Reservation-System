<p id="notice"><%= notice %></p>

<h1>Room Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_categories.each do |room_category| %>
      <tr>
        <td><%= room_category.name %></td>
        <td><%= room_category.description %></td>
        <td><%= room_category.price %></td>
        <td><%= link_to 'Show', room_category %></td>
        <td><%= link_to 'Edit', edit_room_category_path(room_category) %></td>
        <td><%= link_to 'Destroy', room_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Category', new_room_category_path %>
